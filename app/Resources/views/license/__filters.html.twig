{% form_theme filterForm ':other:aui_form_theme.html.twig' %}

<div class="aui-group">
    <div class="aui-item">
        {{ form_start(filterForm, {'attr': {'class': 'aui'}}) }}
            <fieldset class="group">
                <legend><span>Filter by addon</span></legend>
                {{ form_widget(filterForm.addon) }}
            </fieldset>

            <fieldset class="group">
                <legend><span>Filter by license</span></legend>
                {{ form_widget(filterForm.license) }}
            </fieldset>
            <div class="field-group">
                <label>Sorting field</label>
                {{ form_widget(filterForm.sort_field, {'attr': {'class': 'select'}}) }}
                {{ form_widget(filterForm.sort_direction, {'attr': {'class': 'select'}}) }}
            </div>
            <div class="field-group">
                <label>Limit per page</label>
                {{ form_widget(filterForm.limit, {'attr': {'class': 'select'}}) }}
            </div>
            <div class="buttons-container">
                <div class="buttons">
                    <button class="aui-button aui-button-primary">Apply</button>
                    <button class="aui-button">Reset</button>
                </div>
            </div>
        {{ form_end(filterForm) }}
    </div>
</div>